<!-- app/views/posts/_form.html.erb -->
<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div class="bg-red-50 text-red-500 p-4 rounded-md mb-4">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul class="list-disc pl-5 mt-2">
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-6">
    <div>
      <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :title, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= form.label :description, "Brief description", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :description, rows: 2, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      <p class="mt-1 text-sm text-gray-500">A short summary that will be displayed in post listings.</p>
    </div>

    <div>
      <%= form.label :content, class: "block text-sm font-medium text-gray-700" %>
      <%= form.rich_text_area :content, class: "mt-1 block w-full" %>
      <p class="mt-1 text-sm text-gray-500">Add code blocks, images, and other rich content.</p>
    </div>
    
    <div>
      <%= form.label :tag_list, "Tags (comma separated)", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :tag_list, value: post.tag_list&.join(', '), class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "ruby, rails, tutorial" %>
      <p class="mt-1 text-sm text-gray-500">Add relevant tags to make your post discoverable (e.g., ruby, rails, api).</p>
    </div>

    <div class="flex items-center space-x-6">
      <div class="flex items-center">
        <%= form.check_box :published, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
        <%= form.label :published, class: "ml-2 block text-sm text-gray-900" %>
      </div>
      
      <div class="flex items-center">
        <%= form.check_box :premium, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
        <%= form.label :premium, "Premium content", class: "ml-2 block text-sm text-gray-900" %>
      </div>
    </div>

    <div class="flex justify-end">
      <%= form.submit "Save Post", class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>
<% end %>